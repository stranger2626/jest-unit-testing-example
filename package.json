{
  "name": "jest-unit-testing-example",
  "version": "1.0.0",
  "description": "a simple unit testing example using jest",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "coverage": "jest --collect-coverage"
  },
  "keywords": [
    "unit",
    "testing"
  ],
  "author": "Matsvei.Murashka",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "husky": "^4.2.3",
    "jest": "^25.2.3"
  },
  "jest": {
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "coverageReporters": [
      "html",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    }
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stranger2626/jest-unit-testing-example.git"
  },
  "bugs": {
    "url": "https://github.com/stranger2626/jest-unit-testing-example/issues"
  },
  "homepage": "https://github.com/stranger2626/jest-unit-testing-example#readme"
}
